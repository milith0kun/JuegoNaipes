<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".SplashActivity">

    <!-- Contenedor principal centrado verticalmente -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <!-- Contenedor del logo -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <!-- Icono principal del juego -->
        <ImageView
            android:id="@+id/gameIcon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/app_icon_description"
            android:src="@drawable/game_logo"
            android:scaleType="centerInside"
            android:elevation="4dp" />

        <!-- Elementos decorativos de cartas -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:rotation="-15"
                android:src="@drawable/ac"
                android:alpha="0.9"
                android:scaleType="centerInside"
                android:contentDescription="@string/decorative_card" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:rotation="5"
                android:src="@drawable/qh"
                android:alpha="0.9"
                android:scaleType="centerInside"
                android:contentDescription="@string/decorative_card" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:rotation="-10"
                android:src="@drawable/ad"
                android:alpha="0.9"
                android:scaleType="centerInside"
                android:contentDescription="@string/decorative_card" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="45dp"
                android:rotation="12"
                android:src="@drawable/qs"
                android:alpha="0.9"
                android:scaleType="centerInside"
                android:contentDescription="@string/decorative_card" />

        </LinearLayout>

    </LinearLayout>

    <!-- Título principal -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="serif"
        android:text="@string/game_title"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:gravity="center" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/game_subtitle"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:alpha="0.9"
        android:letterSpacing="0.1"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:gravity="center" />

    <!-- Botón mejorado para iniciar el juego -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FF4444"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnIniciarJuego"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:text="@string/start_game_button"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:paddingHorizontal="36dp"
            android:paddingVertical="14dp"
            android:letterSpacing="0.05"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>