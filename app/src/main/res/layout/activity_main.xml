<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context=".MainActivity">

    <!-- Header con información del juego -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/cartasPozo"
                android:layout_width="32dp"
                android:layout_height="46dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/content_desc_cartas_pozo"
                android:scaleType="centerCrop"
                android:src="@drawable/red_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvMovimientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/text_movimientos_inicial"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:contentDescription="@string/contador_movimientos_description" />

                <TextView
                    android:id="@+id/tvCartaActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="start"
                    android:text="Esperando carta..."
                    android:textColor="@color/rojo_cartas"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:contentDescription="Información de la carta actual" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Área de juego con las cartas -->
    <LinearLayout
        android:id="@+id/gameArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/game_area_padding"
        android:weightSum="5"
        app:layout_constraintBottom_toTopOf="@id/controlsCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerCard">

        <!-- Tréboles -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/verde_mesa"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTreboles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/treboles_description" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Corazones -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/verde_mesa"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCorazones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/corazones_description" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Diamantes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/verde_mesa"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDiamantes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/diamantes_description" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Picas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/verde_mesa"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPicas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/picas_description" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Pista -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/verde_mesa"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/pista_description" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Controles del juego -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/controlsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSiguiente"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_weight="0.8"
                android:background="@drawable/button_elegant"
                android:text="@string/msg_btn_siguiente"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:elevation="4dp"
                android:contentDescription="@string/btn_siguiente_description"
                app:icon="@android:drawable/ic_media_play"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJuegoNuevo"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginHorizontal="@dimen/button_margin"
                android:layout_weight="0.8"
                android:background="@drawable/button_elegant"
                android:text="@string/msg_btn_juego_nuevo"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:elevation="4dp"
                android:contentDescription="@string/btn_juego_nuevo_description"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInfo"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_margin"
                android:layout_weight="0.8"
                android:background="@drawable/button_elegant"
                android:text="@string/msg_btn_instrucciones"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:elevation="4dp"
                android:contentDescription="@string/btn_info_description"
                app:icon="@android:drawable/ic_menu_info_details"
                app:iconTint="@color/white" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>