<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material Design -->
    <style name="Theme.JuegoCarreraNaipes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#2E7D32</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#A5D6A7</item>
        <item name="colorOnPrimaryContainer">#1B5E20</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">#C62828</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#FFCDD2</item>
        <item name="colorOnSecondaryContainer">#B71C1C</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">#1976D2</item>
        <item name="colorOnTertiary">#FFFFFF</item>
        <item name="colorTertiaryContainer">#BBDEFB</item>
        <item name="colorOnTertiaryContainer">#0D47A1</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/verde_mesa</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorSurfaceVariant">@color/verde_mesa_claro</item>
        <item name="colorOnSurfaceVariant">#FFFFFF</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/verde_mesa</item>
        <item name="colorOnBackground">#FFFFFF</item>
        
        <!-- Error colors -->
        <item name="colorError">#D32F2F</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorErrorContainer">#FFEBEE</item>
        <item name="colorOnErrorContainer">#C62828</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">#BDBDBD</item>
        <item name="colorOutlineVariant">#E0E0E0</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/verde_mesa</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/verde_mesa</item>
        
        <!-- Window flags for immersive experience -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Splash Screen configurado en values-v31/themes.xml para Android 12+ -->
    </style>
</resources>