<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dimensiones de las cartas (contenedor original, imagen reducida) -->
    <dimen name="carta_ancho">38dp</dimen> <!-- Ancho original del contenedor -->
    <dimen name="carta_alto">50dp</dimen> <!-- Altura original del contenedor -->
    <dimen name="carta_ancho_imageview">32dp</dimen> <!-- Ancho reducido del ImageView dentro del contenedor -->
    <dimen name="carta_alto_imageview">46dp</dimen> <!-- Alto ajustado del ImageView para compensar padding inferior -->
    
    <!-- Espaciado y márgenes optimizados -->
    <dimen name="carta_margin">0.5dp</dimen> <!-- Margen mínimo entre cartas para mejor distribución -->
    <dimen name="carta_padding">2dp</dimen> <!-- Padding mínimo interno para que la imagen esté perfectamente dentro del contenedor -->
    <dimen name="carta_corner_radius">2dp</dimen> <!-- Radio muy reducido para esquinas menos curvas -->
    <dimen name="carta_elevation">1dp</dimen> <!-- Elevación reducida -->
    
    <!-- Dimensiones del área de juego optimizadas -->
    <dimen name="game_area_padding">1dp</dimen> <!-- Padding mínimo del área de juego -->
    <dimen name="recyclerview_padding">1dp</dimen> <!-- Padding mínimo para RecyclerView -->
    
    <!-- Dimensiones de botones optimizadas -->
    <dimen name="button_height">34dp</dimen>
    <dimen name="button_margin">2dp</dimen>
    <dimen name="button_container_padding">2dp</dimen>
</resources>