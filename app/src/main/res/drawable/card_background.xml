<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Sombra de la carta mÃ¡s sutil -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    
    <!-- Fondo principal de la carta -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="3dp" />
            <stroke
                android:width="0.5dp"
                android:color="#D0D0D0" />
        </shape>
    </item>
    
    <!-- Brillo sutil optimizado -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#08FFFFFF"
                android:centerColor="#04FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    
</layer-list>