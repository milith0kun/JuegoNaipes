<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Fondo base con degradado -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/verde_mesa"
                android:centerColor="@color/verde_mesa_oscuro"
                android:endColor="#0A4A0E"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Patrón sutil de textura -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#10FFFFFF"
                android:centerColor="#05FFFFFF"
                android:endColor="#10000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Efecto de viñeta sutil en los bordes -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="70%"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#00000000"
                android:endColor="#20000000" />
        </shape>
    </item>
    
</layer-list>