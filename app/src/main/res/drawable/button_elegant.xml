<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#B8860B"
                android:endColor="#DAA520"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#8B7355" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#DAA520"
                android:endColor="#B8860B"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#8B7355" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
    
</selector>