<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context=".MainActivity">

    <!-- Header con información del juego -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/superficie_verde_suave"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/cartasPozo"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/content_desc_cartas_pozo"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/red_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:id="@+id/tvMovimientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/text_movimientos_inicial"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:contentDescription="@string/contador_movimientos_description" />

                <TextView
                    android:id="@+id/tvCartaActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Esperando carta..."
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:contentDescription="Información de la carta actual" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Área de juego con las 4 pistas -->
    <LinearLayout
        android:id="@+id/gameAreaLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/game_area_padding"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintBottom_toTopOf="@id/controlsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Corazones -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/superficie_dorada"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/dorado_elegante"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCorazones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/corazones_description" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Tréboles -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/superficie_verde_suave"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/verde_mesa_medio"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTreboles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/treboles_description" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Diamantes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/superficie_premium"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/dorado_elegante"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDiamantes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/diamantes_description" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Picas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/superficie_verde_suave"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/verde_mesa_medio"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPicas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/picas_description" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Pista central para mostrar cartas jugadas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/superficie_verde_suave"
            app:cardCornerRadius="@dimen/carta_corner_radius"
            app:cardElevation="@dimen/carta_elevation"
            app:strokeColor="@color/verde_mesa_medio"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:orientation="horizontal"
                android:padding="@dimen/recyclerview_padding"
                android:scrollbars="horizontal"
                android:contentDescription="@string/pista_description" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Controles del juego -->
     <com.google.android.material.card.MaterialCardView
        android:id="@+id/controlsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/superficie_premium"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/button_container_padding">

            <!-- Botones más estrechos en landscape -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSiguiente"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/siguiente"
                android:textSize="11sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJuegoNuevo"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginHorizontal="@dimen/button_margin"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/juego_nuevo"
                android:textSize="11sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInfo"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_margin"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/info"
                android:textSize="11sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>